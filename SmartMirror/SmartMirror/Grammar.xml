<?xml version="1.0" encoding="utf-8"?>
<grammar
  version="1.0"
  xml:lang="de-DE"
  mode="voice"
  root="rootRule"
  xmlns="http://www.w3.org/2001/06/grammar"
  tag-format="semantics/1.0">
  
  <!--Root-->
  <rule id="rootRule" scope="public">
    <one-of>
      <item> <ruleref uri="#Home"/> </item>
      <item>
        <ruleref uri="#time"/>
      </item>
      <item>
        <ruleref uri="#light"/>
      </item>
      <item>
        <ruleref uri="#weather"/>
      </item>
      <item>
        <ruleref uri="#weatherforecast"/>
      </item>
      <item>
        <ruleref uri="#news"/>
      </item>
      <item>
        <ruleref uri="#quote"/>
      </item>
    </one-of>
  </rule>
  
  <!--Home-->
  <rule id="Home">
    <example> spiegel zeige bitte die übersicht </example>
    <example> spiegel zeige die übersicht </example>
    <example> spiegel zeige bitte übersicht </example>
    <example> spiegel zeige übersicht </example>
    <example> spiegel zeige übersicht bitte </example>
    <example> spiegel bitte zeige übersicht </example>
    <example> spiegel bitte zeige die übersicht </example>
    
    <example> spiegel zeige bitte die module </example>
    <example> spiegel zeige die module </example>
    <example> spiegel zeige bitte module </example>
    <example> spiegel zeige module </example>
    <example> spiegel zeige module bitte </example>
    <example> spiegel bitte zeige module </example>
    <example> spiegel bitte zeige die module </example>

    <example> spiegel zeige bitte die modulübersicht </example>
    <example> spiegel zeige die modulübersicht </example>
    <example> spiegel zeige bitte modulübersicht </example>
    <example> spiegel zeige modulübersicht </example>
    <example> spiegel zeige modulübersicht bitte </example>
    <example> spiegel bitte zeige modulübersicht </example>
    <example> spiegel bitte zeige die modulübersicht </example>

    <example> spiegel zeige bitte die hauptseite </example>
    <example> spiegel zeige die hauptseite </example>
    <example> spiegel zeige bitte hauptseite </example>
    <example> spiegel zeige hauptseite </example>
    <example> spiegel zeige hauptseite bitte </example>
    <example> spiegel bitte zeige hauptseite </example>
    <example> spiegel bitte zeige die hauptseite </example>

    <item> spiegel </item>
    <item repeat="0-1"> bitte </item>
    <item> zeige </item>
    <item repeat="0-1"> bitte </item>
    <item repeat="0-1"> die </item>
    <ruleref uri="#HomePossibilities"/>
    <item repeat="0-1"> bitte </item>
  </rule>

  <rule id="HomePossibilities">
    <example> übersicht </example>
    <example> module </example>
    <example> modulübersicht </example>
    <example> hauptseite </example>

    <item>
      <one-of>
        <item> übersicht </item>
        <item> module </item>
        <item> modulübersicht </item>
        <item> hauptseite </item>
      </one-of>
    </item>
  </rule>
  
  <!--Time-->
  <rule id="time">
      <item>zeit</item>
      <item>uhrzeit</item>
      <item>sonnenaufgang</item>
      <item>sonnenuntergang</item>
      <item>sonne</item>
      <item>datum</item>
      <item>tag</item>
      <item>monat</item>
      <item>jahr</item>
  </rule>
  
  <!--Light-->
  <rule id="light">
      <item>licht</item>
  </rule>

  <!--Weather-->
  <rule id="weather">
    <one-of>
      <item>wetter</item>
      <item>aktuelles wetter</item>
      <item>wetter heute</item>
      <item>temperatur</item>
    </one-of>
  </rule>

  <!--Weatherforecast-->
  <rule id="weatherforecast">
    <one-of>
      <item>wettervorhersage</item>
      <item>vorhersage</item>
      <item>wetter morgen</item>
      <item>wetter übermorgen</item>
    </one-of>
  </rule>

  <!--News-->
  <rule id="news">
    <one-of>
      <item>sport nachrichten</item>
      <item>sport news</item>
      
      <item>branchen nachrichten</item>
      <item>brachen news</item>
      <item>unternehmens nachrichten</item>
      <item>unternehmens news</item>
      <item>geschäft nachrichten</item>
      <item>geschäft news</item>
      <item>handel nachrichten</item>
      <item>handel news</item>
      
      <item>unterhaltungs nachrichten</item>
      <item>unterhaltungs news</item>
      <item>entertainment nachrichten</item>
      <item>entertainment news</item>

      <item>gesundheits nachrichten</item>
      <item>gesundheits news</item>

      <item>wissenschafts nachrichten</item>
      <item>wissenschafts news</item>
      <item>naturwissenschafts nachrichten</item>
      <item>naturwissenschafts news</item>

      <item>technologie nachrichten</item>
      <item>technologie news</item>
      <item>technik nachrichten</item>
      <item>technik news</item>
    </one-of>
  </rule>

  <!--Quote-->
  <rule id="quote">
    <one-of>
      <item>zitat</item>
      <item>spruch</item>
    </one-of>
  </rule>
</grammar>